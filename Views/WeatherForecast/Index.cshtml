@model IEnumerable<RazorPdfTask.Models.Weather>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Convert to Pdf", "Convert")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TemperatureC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TemperatureF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Summary)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TemperatureC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TemperatureF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Summary)
        </td>
   
    </tr>
}

</table>
